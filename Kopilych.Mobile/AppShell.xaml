<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Kopilych.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Kopilych.Mobile"
    xmlns:views="clr-namespace:Kopilych.Mobile.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Kopilych.Mobile">

    <TabBar>
        <ShellSection Title="Копилки" Icon="coin_icon.svg">
            <ShellContent
                Title="Копилки"
                ContentTemplate="{DataTemplate views:PiggyBanksGalleryPageView}"
                Route="PiggyBanksGallery" />
        </ShellSection>
        <ShellSection Title="Профиль" Icon="user_icon.svg">
            <ShellContent
         Title="Профиль"
         ContentTemplate="{DataTemplate views:UserSettingsPageView}"
         Route="UserSettings" />
        </ShellSection>
    </TabBar>


</Shell>
